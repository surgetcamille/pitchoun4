<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <%= form_with(model: child, local: true, html: { class: "needs-validation", novalidate: true }) do |form| %>
        <% if child.errors.any? %>
          <div class="alert alert-danger" role="alert">
            <h4 class="alert-heading mb-3 fs-5"><%= pluralize(child.errors.count, "error") %> prohibited this child from being saved:</h4>
            <ul>
              <% child.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="card mb-3 border-0 rounded-3">
          <div class="card-body">
            <%= form.label :picture, class: "form-label h4" %>
            <%= form.text_area :picture, class: "form-control", placeholder: "Ajoutez l'URL de la photo" %>
          </div>
        </div>

        <div class="card mb-3 border-0 rounded-3">
          <div class="card-body">
            <h5 class="card-title h3">Nom</h5>
            <%= form.text_field :name, class: "form-control", required: true, placeholder: "Nom de l'enfant" %>
          </div>
        </div>

        <div class="card mb-3 border-0 rounded-3">
          <div class="card-body">
            <h5 class="card-title h3">Pr√©nom</h5>
            <%= form.text_field :firstname, class: "form-control", required: true, placeholder: "Prenom de l'enfant" %>
          </div>
        </div>

        <div class="card mb-3 border-0 rounded-3">
          <div class="card-body">
            <h5 class="card-title h3">Age</h5>
            <%= form.number_field :age, class: "form-control", required: true, placeholder: "Age de l'enfant" %>
          </div>
        </div>

        <div class="card mb-3 border-0 rounded-3">
          <div class="card-body">
            <h5 class="card-title h3">Pays</h5>
            <%= form.text_field :country, class: "form-control", required: true, placeholder: "Pays de l'enfant" %>
          </div>
        </div>

        <div class="card mb-3 border-0 rounded-3">
          <div class="card-body">
            <h5 class="card-title h3">Ville</h5>
            <%= form.text_field :city, class: "form-control", required: true, placeholder: "Ville de l'enfant" %>
          </div>
        </div>

        <div class="form-group text-center mt-4">
          <%= form.submit "Enregistrer", class: "btn btn-primary btn-lg rounded-pill px-5 py-3 shadow-sm fw-bold" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
