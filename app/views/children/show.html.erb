<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="alert alert-success" role="alert">
        <%= notice %>
      </div>

      <%= render @child %>

      <div class="mt-3">
        <%= link_to "Edit this child", edit_child_path(@child), class: "btn btn-primary mr-2" %>
        <%= link_to "Back to children", children_path, class: "btn btn-secondary mr-2" %>
        <%= button_to "Destroy this child", @child, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger", form: { "data-turbo-method": "delete" } %>
      </div>
    </div>
  </div>
</div>

