<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <%= form_with(model: artwork, local: true, html: { class: "needs-validation", novalidate: true }) do |form| %>
        <% if artwork.errors.any? %>
          <div class="alert alert-danger" role="alert">
            <h4 class="alert-heading mb-3"><%= pluralize(artwork.errors.count, "error") %> prohibited this artwork from being saved:</h4>
            <ul>
              <% artwork.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="card mb-3 border-0 rounded-3">
          <div class="card-body">
            <h3 class="form-label mb-2"><%= form.label :paint %></h3>
            <%= form.text_area :paint, class: "form-control rounded-3", placeholder: "Enter paint URL here" %>
          </div>
        </div>

        <div class="card mb-3 border-0 rounded-3">
          <div class="card-body">
            <h3 class="form-label mb-2"><%= form.label :title %></h3>
            <%= form.text_field :title, class: "form-control rounded-3", placeholder: "Entre le titre de l'oeuvre" %>
          </div>
        </div>

        <div class="card mb-3 border-0 rounded-3">
          <div class="card-body">
            <h3 class="form-label mb-2"><%= form.label :date %></h3>
            <%= form.date_field :date, class: "form-control rounded-3", placeholder: "Selectionne une date" %>
          </div>
        </div>

        <div class="card mb-3 border-0 rounded-3">
          <div class="card-body">
            <h3 class="form-label mb-2"><%= form.label :author %></h3>
            <%= form.select :author_id, Child.all.map { |child| [child.name, child.id] }, { include_blank: true }, class: "form-control rounded-3", prompt: "Selectionne son auteur" %>
          </div>
        </div>

        <div class="card mb-3 border-0 rounded-3">
          <div class="card-body">
            <h3 class="form-label mb-2"><%= form.label :description %></h3>
            <%= form.text_area :description, class: "form-control rounded-3", placeholder: "Entre sa description" %>
          </div>
        </div>

        <div class="form-group text-center mt-3">
          <%= form.submit "Enregistrer", class: "btn btn-primary btn-lg rounded-pill px-5 py-2 shadow-sm" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
