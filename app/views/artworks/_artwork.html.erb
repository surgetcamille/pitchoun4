<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title border-bottom pb-2"><strong>Paint:</strong></h5>
          <div class="card-img-top image-frame">
            <img src="<%= artwork.paint %>" class="img-fluid" alt="Painting">
          </div>

          <h5 class="card-title mt-4 border-bottom pb-2"><strong>Title:</strong></h5>
          <p class="card-text"><%= artwork.title %></p>

          <h5 class="card-title border-bottom pb-2"><strong>Date:</strong></h5>
          <ul class="list-group list-group-flush">
            <li class="list-group-item"><%= artwork.date %></li>
          </ul>

          <h5 class="card-title mt-4 border-bottom pb-2"><strong>Author:</strong></h5>
          <p class="card-text">
            <%= link_to artwork.author, artwork.author, class: "card-link" %>
            <a href="#" class="card-link">See more artworks by <%= artwork.author %></a>
          </p>

          <h5 class="card-title mt-4 border-bottom pb-2"><strong>Description:</strong></h5>
          <p class="card-text"><%= artwork.description %></p>
        </div>
      </div>
    </div>
  </div>
</div>
