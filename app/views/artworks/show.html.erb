<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <p class="text-success"><%= notice %></p>

      <%= render @artwork %>

      <div class="mt-4">
        <%= link_to "Edit this artwork", edit_artwork_path(@artwork), class: "btn btn-primary mr-2 mb-2" %> 
        <%= link_to "Back to artworks", artworks_path, class: "btn btn-secondary mr-2 mb-2" %>
        <%= button_to "Destroy this artwork", @artwork, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger mb-2" %>
      </div>
    </div>
  </div>
</div>
